doctype html
html
    head
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        script(src='https://code.jquery.com/jquery-3.3.1.min.js')
        script
            include layout.js
        style
            include layout.css
    body
        .container
            .row
                .col-xs-12.col-sm-12.col-md-12.col-lg-12
                    .text-center
                        h1 WeGo
                        h3 Bảng thống kê chi phí của tất cả các thành viên trong chuyến đi
                    table.table.table-hover.table-bordered#myTable
                        thead
                            tr
                                th Giao Dịch
                                th Tiền Giao Dịch
                                th Tên Thành Viên
                                th Email
                                th Số Dư
                        tbody
                            each transactionUser in transactionUsers
                                tr.clickable-row
                                    td= transactionUser.transaction_id.name
                                    td= transactionUser.transaction_id.amount
                                    td= transactionUser.user_id.name
                                    td= transactionUser.user_id.email
                                    if (transactionUser.total < 0)
                                        td(style='color:red;')= transactionUser.total.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,') + ' VNĐ'
                                    else
                                        td(style='color:green;')= transactionUser.total.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,') + ' VNĐ'





